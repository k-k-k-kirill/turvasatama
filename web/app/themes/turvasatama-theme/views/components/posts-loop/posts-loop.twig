{#
 # Partial for a posts loop
 #}

<div class="posts-loop posts-loop-{{ post_type }}">
	{% for post in posts %}
		<div class="posts-loop__item posts-loop-{{ post.type }}__item">
			{% include ['@components/teaser/teaser-' ~ post.type ~ '.twig', '@components/teaser/teaser.twig'] %}
		</div>
	{% endfor %}
</div>
