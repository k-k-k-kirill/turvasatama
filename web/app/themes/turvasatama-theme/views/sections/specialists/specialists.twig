{% extends '@sections/section/section.twig' %}

{% block section_content %}
  <div class="container mb-8 md:mb-12">
    {% if section.title %}
      <h2 class="mb-4">{{section.title}}</h2>
    {% endif %}

    {% include "@components/separator/separator.twig" with { classes: 'mb-4' } %}

    {% if section.specialists_data %}
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for specialist in section.specialists_data %}
          {% if specialist.info %}
            {% include "@components/teaser/teaser-specialist/teaser-specialist.twig" with { specialist: specialist, classes: 'mb-12' } %}
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
{% endblock %}