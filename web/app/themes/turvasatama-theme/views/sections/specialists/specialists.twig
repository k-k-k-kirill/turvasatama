{% extends '@sections/section/section.twig' %}

{% block section_content %}
  <div class="container mb-8 md:mb-12">
    {% if section.title %}
      <h2 class="mb-4">{{section.title}}</h2>
    {% endif %}

    {% include "@components/separator/separator.twig" with { classes: 'mb-4' } %}

    {% if specialists %}
      <div class="grid md:grid-cols-2 lg:grid-cols-3">
        {% for specialist in specialists %}
          {% include "@components/teaser/teaser-specialist/teaser-specialist.twig" with { specialist: specialist } %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
{% endblock %}