{% extends 'base/base.twig' %}

{% block site_content %}
	<section class="container">
    <h1 class="specialists__title my-12">{{post.title}}</h1>

    {% if specialists %}
      <div class="grid md:grid-cols-2 lg:grid-cols-3">
        {% for specialist in specialists %}
          {% include "@components/teaser/teaser-specialist/teaser-specialist.twig" with { specialist: specialist, classes: 'mb-12' } %}
        {% endfor %}
      </div>
    {% endif %}
  </section>

  {% if specialists_fields.cta %}
    {% include "@sections/cta-minimal/cta-minimal.twig" with { section: specialists_fields.cta } %}
  {% endif %}

  {% if specialists_fields.contact_form %}
    {% embed "@sections/thirty-seventy/thirty-seventy.twig" %}
      {% block left_content %}
        {% if specialists_fields.contact_form.text %}
          <div class="mb-3">{{specialists_fields.contact_form.text}}</div>
        {% endif %}

        {% if specialists_fields.contact_form.link %}
          {% set link_object = specialists_fields.contact_form.link %}
          <a href="{{link_object.url}}" target="{{link_object.target}}" class="btn btn--weird mt-4 block">{{link_object.title}}</a>
        {% endif %}
      {% endblock %}
      {% block right_content %}
        {% include "@components/contact-form/contact-form.twig" with { id: specialists_fields.contact_form.form.ID } %}
      {% endblock %}
    {% endembed %}
  {% endif %}
{% endblock %}