{% extends '@sections/section/section.twig' %}

{% block section_content %}
  <div class="container mb-10 md:mb-20 feed">
    <h2 class="mb-10">{{section.title}}</h2>

    <div class="feed__posts grid md:grid-cols-2 lg:grid-cols-3 gap-10 md:gap-6">
      {% for item in section.posts %}
        {% if loop.index <= 3 %}
          <div class="feed__post">
            {% include '@components/teaser/teaser-post/teaser-post.twig' with { post: get_post(item) } %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.archive_url %}
      <div class="text-center mt-10">
        <a href="{{section.archive_url}}" class="btn btn--outline">{{__('All posts', 'turvasatama-theme-v2')}}</a>
      </div>
    {% endif %}
  </div>
{% endblock %}
