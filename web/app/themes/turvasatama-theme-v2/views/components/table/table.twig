{#
 # Template for a bootstrap table
 #
 # @see https://getbootstrap.com/docs/4.0/content/tables/
 # @version 1.0.0
 #
 # @var contents  table contents.
 # @var classes   table classes according to bootstrap.
 #
 #}

<table class="table {{ classes }}">
  {% block thead %}
    {% if contents.thead %}
      <thead class="table__header">
        <tr class="table__row table__header__row">
          {% for cell in contents.thead %}
            <th class="table__cell table__header__cell">{{ cell }}</th>
          {% endfor %}
        </tr>
      </thead>
    {% endif %}
  {% endblock %}
  {% block tbody %}
    <tbody class="table__footer">
      {% for row in contents.tbody %}
        <tr class="table__row table__body__row">
          {% for cell in row %}
            <td class="table__cell table__body__cell">{{ cell }}</td>
          {% endfor %}
        </tr>
      {% endfor %}
    </tbody>
  {% endblock %}
</table>
